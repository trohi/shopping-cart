{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products}}
             <li class="list-group-item">
                <span class="badge badge-secondary">{{this.qty}}</span>
                <strong>{{this.item.title}}</strong>
                <span class="label label-success">${{this.price}}</span>
                <div class="btn-group">
            {{/each}}    
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total:$ {{totalPrice}}</strong>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>

{{else}}
<div class="row">
    <div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
        <h2>No items in shopping cart</h2>
    </div>
</div>
{{/if}}

